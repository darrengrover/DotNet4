<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="NumericEdits.NumericSpinEdit"
	x:Name="UserControl" d:DesignWidth="70" d:DesignHeight="25" Height="Auto" Width="Auto" xmlns:my="clr-namespace:NumericEdits" xmlns:my1="clr-namespace:MicroSlider;assembly=MicroSlider" SnapsToDevicePixels="True" Focusable="True" GotFocus="UserControl_GotFocus">

	<Grid x:Name="LayoutRoot">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="80*" Name="EditColumn" />
			<ColumnDefinition Width="20*" Name="SpinColumn" />
        </Grid.ColumnDefinitions>
        <my:NumericEdit Height="Auto" HorizontalAlignment="Stretch" x:Name="numericEdit" VerticalAlignment="Stretch" Width="Auto" ValueChanged="numericEdit_ValueChanged" Border="{x:Null}" />
        <my1:uSliderControl Grid.Column="1" HorizontalAlignment="Stretch" Name="uSlider" VerticalAlignment="Stretch" Orientation="Vertical" UpDownMode="True" ShowArrows="True" SnapsToDevicePixels="True" ValueChanged="uSlider_ValueChanged" Background="#80FFFFFF" />
        <Rectangle Grid.ColumnSpan="2" Height="Auto" HorizontalAlignment="Stretch" Margin="0" Name="borderRect" Stroke="Black" VerticalAlignment="Stretch" Width="Auto" Panel.ZIndex="2" SnapsToDevicePixels="True" Opacity="1" />
    </Grid>
</UserControl>