<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="NumericEdits.NumericEdit"
	x:Name="numericEdit" d:DesignWidth="70" d:DesignHeight="25"  Height="Auto" Width="Auto" SizeChanged="numericEdit_SizeChanged" Focusable="True" GotFocus="numericEdit_GotFocus">

	<Grid x:Name="LayoutRoot">
		<TextBox TextWrapping="NoWrap" Text="0" PreviewTextInput="TextBox_PreviewTextInput" Name="txtNumeric" MaxLines="1" TextChanged="txtNumeric_TextChanged" SelectionChanged="txtNumeric_SelectionChanged" MouseWheel="txtNumeric_MouseWheel" SnapsToDevicePixels="True" BorderThickness="0" GotFocus="txtNumeric_GotFocus" />
        <Rectangle Grid.ColumnSpan="1" Height="Auto" HorizontalAlignment="Stretch" Margin="0" Name="borderRect" Stroke="Black" VerticalAlignment="Stretch" Width="Auto" Panel.ZIndex="2" SnapsToDevicePixels="True" Opacity="1" />
    </Grid>
</UserControl>