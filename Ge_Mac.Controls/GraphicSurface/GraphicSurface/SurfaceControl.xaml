<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="GraphicSurface.Surface"
	x:Name="GraphicSurface"
	d:DesignWidth="640" d:DesignHeight="480" SizeChanged="GraphicSurface_SizeChanged">

	<Grid x:Name="LayoutRoot">
		<ScrollViewer Margin="0" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Hidden" Name="surfaceViewer">
			<Grid x:Name="surfaceGrid">
				<Canvas x:Name="surfaceCanvas" HorizontalAlignment="Left" Height="100" Margin="0" VerticalAlignment="Top" Width="100"/>
			</Grid>
		</ScrollViewer>
	</Grid>
</UserControl>