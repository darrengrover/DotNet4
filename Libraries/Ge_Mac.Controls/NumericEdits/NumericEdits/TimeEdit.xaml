<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="NumericEdits.TimeEdit"
	x:Name="timeEdit"
	d:DesignWidth="70" d:DesignHeight="25" Height="Auto" Width="Auto" xmlns:my="clr-namespace:NumericEdits" Focusable="True" GotFocus="timeEdit_GotFocus">

	<Grid x:Name="LayoutRoot" Height="Auto">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0.50*"/>
			<ColumnDefinition Width="0.50*"/>
		</Grid.ColumnDefinitions>
        <my:NumericSpinEdit Grid.ColumnSpan="1" Height="Auto" HorizontalAlignment="Stretch" Margin="0" x:Name="numericSpinEditHH" VerticalAlignment="Stretch" Width="Auto" Maximum="23" SpinColumnPercent="33" Padding="0" Border="{x:Null}" Fill="{x:Null}" TextAlignment="Right" ValueChanged="numericSpinEditHH_ValueChanged" MaxChars="2">
        </my:NumericSpinEdit>
        <my:NumericSpinEdit Height="Auto" HorizontalAlignment="Stretch" x:Name="numericSpinEditMM" Width="Auto" Grid.Column="1" Maximum="59" SpinColumnPercent="33" Padding="0" Border="{x:Null}" TextAlignment="Right" ValueChanged="numericSpinEditMM_ValueChanged" MaxChars="2" />
        <Rectangle Grid.ColumnSpan="2" Height="Auto" HorizontalAlignment="Stretch" Margin="0" Name="borderRect" Stroke="Black" VerticalAlignment="Stretch" Width="Auto" Panel.ZIndex="2" SnapsToDevicePixels="True" Opacity="1" />
    </Grid>
</UserControl>