<Window x:Class="OperatorLogin.TagEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Operator Tags" Height="447" Width="781" ResizeMode="NoResize" Loaded="Window_Loaded" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="ColourRowStyle" TargetType="DataGridRow">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontWeight" Value="Normal"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding HasChanged}" Value="True">
                    <Setter Property="Foreground" Value="Blue"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="145" />
            <RowDefinition Height="180*" />
        </Grid.RowDefinitions>
        <Label Content="Tag" Height="34" HorizontalAlignment="Left" Margin="0,2,0,0" Name="lblTag" VerticalAlignment="Top" FontSize="18" Panel.ZIndex="2" Grid.Row="1" Foreground="White" Width="126" HorizontalContentAlignment="Right" />
        <TextBox Height="34" HorizontalAlignment="Left" Margin="132,4,0,0" Name="txtTagEdit" VerticalAlignment="Top" Width="311" FontSize="18" TextChanged="txtTagEdit_TextChanged" Panel.ZIndex="2" Grid.Row="1" />
        <Label Content="Operator" Height="34" HorizontalAlignment="Left" Margin="0,46,0,0" Name="lblOperator" VerticalAlignment="Top" FontSize="18" Panel.ZIndex="2" Grid.Row="1" Foreground="White" Width="126" HorizontalContentAlignment="Right" />
        <Button Content="Close" Height="34" HorizontalAlignment="Right" Margin="0,4,12,0" Name="btnClose" VerticalAlignment="Top" Width="100" Click="btnClose_Click" FontSize="18" Panel.ZIndex="2" Grid.Row="1" />
        <ComboBox FontSize="18" FontWeight="Bold" Height="34" ItemsSource="{Binding}" Margin="132,46,0,0" Name="cbxOperators" VerticalAlignment="Top" SelectionChanged="cbxOperators_SelectionChanged" HorizontalAlignment="Left" Width="311" Panel.ZIndex="2" Grid.Row="1" />
        <DataGrid RowStyle="{StaticResource ColourRowStyle}" AlternatingRowBackground="#220090FF" AutoGenerateColumns="False" CanUserAddRows="False" 
                  CanUserDeleteRows="True" GridLinesVisibility="All" VerticalGridLinesBrush="#270090FF" HorizontalGridLinesBrush="#280090FF" Height="Auto" 
                  HorizontalAlignment="Stretch" Margin="6,0,6,6" Name="dgTags" VerticalAlignment="Stretch" Width="Auto" Grid.Row="2" FontSize="18" SelectionChanged="dgTags_SelectionChanged" Panel.ZIndex="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Operator" MinWidth="360" x:Name="dgColOperator" Binding="{Binding Path=ShortDescAndID}" IsReadOnly="True" />
                <DataGridTextColumn Header="RFID Tag" MinWidth="200" x:Name="dgColRFIDTagData" Binding="{Binding Path=TagData}" />
                <DataGridTextColumn Header="Tag ID" MinWidth="64" x:Name="dgColTagID" Binding="{Binding Path=TagID}" />
                <DataGridCheckBoxColumn x:Name="dgColDelete" Header="Delete" MinWidth="64" Binding="{Binding Path=DeleteRecord}" Width="45" IsReadOnly="False" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Add" Height="34" HorizontalAlignment="Left" Margin="27,103,0,0" Name="btnAdd" VerticalAlignment="Top" Width="100" Click="btnAdd_Click" TouchDown="btnAdd_TouchDown" FontSize="18" IsEnabled="False" Panel.ZIndex="2" Grid.Row="1" />
        <Button Content="Store" Height="34" HorizontalAlignment="Left" Margin="533,103,0,0" Name="btnStore" VerticalAlignment="Top" Width="100" Click="btnStore_Click" TouchDown="btnStore_TouchDown" FontSize="18" IsEnabled="False" Panel.ZIndex="2" Grid.Row="1" />
        <Button Content="Refresh" Height="34" HorizontalAlignment="Left" Margin="133,103,0,0" Name="btnRefresh" VerticalAlignment="Top" Width="100" Click="btnRefresh_Click" TouchDown="btnRefresh_TouchDown" FontSize="18" Panel.ZIndex="2" Grid.Row="1" />
        <Label Height="34" HorizontalAlignment="Left" Margin="252,103,0,0" Name="lblPassword" VerticalAlignment="Top" IsEnabled="True" Content="Password" FontSize="18" Panel.ZIndex="2" Grid.Row="1" Foreground="White" Width="149" HorizontalContentAlignment="Right" />
        <TextBox Name="txtPassword" Text="{Binding Path=Password, UpdateSourceTrigger=PropertyChanged}"
         Margin="407,103,176,0" FontFamily="Courier New"
         Foreground="{Binding ElementName=txtPassword, Path=Background}" Height="34" Panel.ZIndex="2" Grid.Row="1" VerticalAlignment="Top" FontSize="18" TextChanged="Password_TextChanged" Width="120" HorizontalAlignment="Left">
            <TextBox.TextDecorations>
                <TextDecorationCollection>
                    <TextDecoration Location="Strikethrough" PenThicknessUnit="FontRenderingEmSize" >
                        <TextDecoration.Pen>
                            <Pen Brush="Black" Thickness="0.5" DashCap="Round" StartLineCap="Round" EndLineCap="Round">
                                <Pen.DashStyle>
                                    <DashStyle Dashes="0.0, 1.2" Offset="0.6"/>
                                </Pen.DashStyle>
                            </Pen>
                        </TextDecoration.Pen>
                    </TextDecoration>
                </TextDecorationCollection>
            </TextBox.TextDecorations>
        </TextBox>
        <Button Content="Update" FontSize="18" Height="34" HorizontalAlignment="Left" Margin="449,4,0,0" Name="btnUpdate" VerticalAlignment="Top" Width="100" Click="btnUpdate_Click" IsEnabled="False" Panel.ZIndex="2" Grid.Row="1" />
        <Rectangle Grid.RowSpan="1" Height="Auto" HorizontalAlignment="Stretch" Margin="0" Name="rectangle2" Stroke="Black" VerticalAlignment="Stretch" Width="Auto" Fill="#FFE32524" Panel.ZIndex="1" />
        <Rectangle Height="Auto" HorizontalAlignment="Stretch" Name="rectangle1" Stroke="Black" Fill="#FF005B8A" VerticalAlignment="Stretch" Width="Auto" Grid.RowSpan="3" />
        <Label Content="Label" FontSize="24" FontWeight="Normal" Foreground="White" Height="Auto" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Margin="0" Name="lblHeader" Padding="5" Panel.ZIndex="1" VerticalAlignment="Stretch" VerticalContentAlignment="Top" />
    </Grid>
</Window>
